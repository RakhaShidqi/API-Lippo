    .docs-footer {
      grid-column: 1 / -1;
      text-align: center;
      padding: 2rem;
      color: white;
      background: rgba(0, 0, 0, 0.2);
      border-radius: 20px;
      margin-top: 2rem;
    }

    .docs-footer a {
      color: white;
      font-weight: 600;
      text-decoration: none;
    }

    .docs-footer a:hover {
      text-decoration: underline;
    }

    /* Responsive */
    @media (max-width: 992px) {
      .docs-container {
