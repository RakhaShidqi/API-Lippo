      color: #1976d2;
    }

    .endpoint-path {
      font-family: 'Fira Code', monospace;
      font-size: 1.1rem;
      font-weight: 500;
      color: #2b3d4f;
    }

    .endpoint-desc {
      color: #6c757d;
      margin-bottom: 1rem;
      font-size: 0.95rem;
    }

    /* Tabs */
    .endpoint-tabs {
      display: flex;
      gap: 0.5rem;
      margin: 1rem 0;
      border-bottom: 1px solid #e9ecef;
    }

    .tab-btn {
      padding: 0.6rem 1.2rem;
      background: none;
      border: none;
      border-bottom: 3px solid transparent;
      font-weight: 600;
      color: #6c757d;
      cursor: pointer;
      transition: all 0.2s;
    }

    .tab-btn:hover {
      color: #4361ee;
    }

    .tab-btn.active {
      color: #4361ee;
      border-bottom-color: #4361ee;
    }

    .tab-content {
      display: none;
      padding: 1rem 0;
    }

    .tab-content.active {
      display: block;
    }

    /* Code Blocks */
    pre {
      background: #2b3d4f;
      border-radius: 12px;
      padding: 1rem;
      margin: 0;
      overflow-x: auto;
    }

    code {
      font-family: 'Fira Code', monospace;
      font-size: 0.9rem;
    }

    .hljs {
      background: transparent;
      padding: 0;
    }

    /* Tabel Parameters */
    .params-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9rem;
    }

    .params-table th {
      text-align: left;
      padding: 0.75rem 1rem;
      background: #f8f9fa;
      font-weight: 600;
      color: #2b3d4f;
      border-bottom: 2px solid #e9ecef;
    }

    .params-table td {
      padding: 0.75rem 1rem;
      border-bottom: 1px solid #e9ecef;
    }

    .params-table tr:last-child td {
      border-bottom: none;
    }

    .param-name {
      font-family: 'Fira Code', monospace;
      font-weight: 500;
      color: #4361ee;
    }

    .param-type {
      color: #f57c00;
      font-size: 0.85rem;
    }

    .param-required {
      background: #ffebee;
      color: #c62828;
      padding: 0.2rem 0.5rem;
      border-radius: 20px;
      font-size: 0.7rem;
      font-weight: 600;
    }

    .param-optional {
      background: #e8f5e9;
      color: #2e7d32;
      padding: 0.2rem 0.5rem;
      border-radius: 20px;
      font-size: 0.7rem;
      font-weight: 600;
    }

    /* Authentication Note */
    .auth-note {
      background: #f8f9ff;
      border-left: 4px solid #4361ee;
      border-radius: 10px;
      padding: 1rem;
      margin-bottom: 2rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .auth-note i {
      font-size: 1.5rem;
      color: #4361ee;
    }

    .auth-note code {
      background: #e9ecef;
      padding: 0.2rem 0.5rem;
      border-radius: 6px;
    }

