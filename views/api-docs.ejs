      color: #2b3d4f;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .section-title i {
      color: #4361ee;
      font-size: 2rem;
    }

    /* Card Endpoint */
    .endpoint-card {
      background: #f8f9fa;
      border-radius: 16px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      border: 1px solid #e9ecef;
      transition: all 0.2s;
    }

    .endpoint-card:hover {
      border-color: #4361ee;
      box-shadow: 0 5px 15px rgba(67, 97, 238, 0.1);
    }

    .endpoint-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .method-badge {
      padding: 0.3rem 1rem;
      border-radius: 30px;
      font-weight: 700;
      font-size: 0.8rem;
