        <h2 class="section-title">
          <i class="bi bi-table"></i>
          Get All Data
        </h2>

        <div class="endpoint-card">
          <div class="endpoint-header">
            <span class="method-badge method-get">GET</span>
            <span class="endpoint-path">/hypernet-lippo/data</span>
          </div>
          <p class="endpoint-desc">Mendapatkan semua data revenue</p>

          <div class="endpoint-tabs">
            <button class="tab-btn active" onclick="showTab(this, 'getall-response')">Response</button>
            <button class="tab-btn" onclick="showTab(this, 'getall-example')">Example</button>
          </div>

          <div id="getall-response" class="tab-content active">
            <pre><code class="language-json">{
  "success": true,
  "count": 2,
  "data": [
    {
      "no": 1,
      "uniqueId": "10014762X8 Lippo Cikarang...",
      "idCustomer": "10014762",
      "customerName": "PT. GFC TERPADU",
