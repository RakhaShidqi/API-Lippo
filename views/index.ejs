<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Import Data Revenue Lippo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">
  <link rel="stylesheet" href="/style.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/xlsx/dist/xlsx.full.min.js"></script>
</head>
<body class="bg-light">
  <div class="container py-5">

    <!-- Form Input -->
    <section class="mb-5">
      <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
          <h4 class="mb-0">üì• Import Data Lippo</h4>
        </div>
        <div class="card-body">
          <!-- Import Button -->
          <div class="mb-3">
            <label class="form-label">üìÇ Import CSV / XLSX</label>
            <form action="/hypernet-lippo/upload-csv" method="post" enctype="multipart/form-data" id="uploadForm">
                <input type="file" name="file" />
            </form>
          </div>

          <!-- Tempat hasil header -->
          <div id="headersResult" class="mt-3"></div>

          <form id="lippoForm">
                <!-- Basic Info -->
                <div class="row mb-3">
                  <div class="col-md-3">
                    <label for="unique-id" class="form-label">Unique Key</label>
                    <input type="text" class="form-control" id="unique-id" placeholder="Enter Unique Key" required>
                  </div>
                  <div class="col-md-3">
                    <label for="id-customer" class="form-label">ID Customer</label>
                    <input type="text" class="form-control" id="id-customer" placeholder="Enter ID" required>
                  </div>
                  <div class="col-md-5">
                    <label for="customer-name" class="form-label">Customer Name</label>
                    <input type="text" class="form-control" id="customer-name" placeholder="Enter name" required>
                  </div>
                  <div class="col-md-4">
                    <label for="mall-name" class="form-label">Mall Name</label>
                    <input type="text" class="form-control" id="mall-name" placeholder="Enter mall" required>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="ship-address" class="form-label">Ship Address</label>
                  <textarea class="form-control" id="ship-address" rows="2" placeholder="Enter address" required></textarea>
                </div>

                <!-- Installation -->
                <h5 class="mt-4">‚öôÔ∏è Installation</h5>
                <div class="row mb-3">
                  <div class="col-md-4">
                    <label for="tgl-wo-req" class="form-label">Tgl WO (Request)</label>
                    <input type="date" class="form-control" id="tgl-wo-address-request" required>
                  </div>
                  <div class="col-md-4">
                    <label for="bast-date" class="form-label">BAST Date</label>
                    <input type="date" class="form-control" id="bast-date" required>
                  </div>
                  <div class="col-md-4">
                    <label for="status" class="form-label">Status</label>
                    <select id="status" class="form-select" required>
                      <option>Posted</option>
                      <option>Not Posted</option>
                    </select>
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-md-3">
                    <label for="start" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="start" required>
                  </div>
                  <div class="col-md-3">
                    <label for="end" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="end" required>
                  </div>
                  <div class="col-md-3">
                    <label for="period" class="form-label">Period (mo)</label>
                    <input type="date" class="form-control" id="period" placeholder="ex: 12" required>
                  </div>
                  <div class="col-md-3">
                    <label for="price-per-month" class="form-label">Price per Month</label>
                    <input type="number" class="form-control" id="price-per-month" placeholder="ex: 499000" required>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="status-payment" class="form-label">Status Payment</label>
                  <select id="status-payment" class="form-select" required>
                    <option>Paid</option>
                    <option>Unpaid</option>
                  </select>
                </div>

                <!-- Revenue Share -->
                <h5 class="mt-4">üí∞ Revenue Share</h5>
                <div class="row mb-3">
                  <div class="col-md-6">
                    <label for="rev-lmi" class="form-label">Rev LMI</label>
                    <input type="number" class="form-control" id="rev-lmi" placeholder="Enter amount" required>
                  </div>
                  <div class="col-md-6">
                    <label for="rev-mall" class="form-label">Rev Mall</label>
                    <input type="number" class="form-control" id="rev-mall" placeholder="Enter amount" required>
                  </div>
                </div>

                <div class="text-end">
                  <button type="submit" class="btn btn-primary px-4">üöÄ Send Data</button>
                </div>
              </form>
            <p id="responseMessage"></p>
        </div>
      </div>
    </section>

    <!-- Table Data -->
    <section>
      <div class="card shadow-lg rounded-4">
        <div class="card-header bg-success text-white rounded-top-4">
          <h4 class="mb-0">üìä Table Data Lippo</h4>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle text-center">
              <thead class="table-dark">
                <tr>
                  <th rowspan="2">No</th>
                  <th rowspan="2">Unique Key</th>
                  <th rowspan="2">ID Customer</th>
                  <th rowspan="2">Customer Name</th>
                  <th rowspan="2">Mall Name</th>
                  <th rowspan="2">Ship Address</th>
                  <th colspan="8">Installation</th>
                  <th colspan="2">Rev Share</th>
                </tr>
                <tr>
                  <th>Tgl WO (request)</th>
                  <th>BAST Date</th>
                  <th>Status</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Period (Mo)</th>
                  <th>Price per Month</th>
                  <th>Status Payment</th>
                  <th>Rev LMI</th>
                  <th>Rev Mall</th>
                </tr>
              </thead>
              <tbody id="table-body">
